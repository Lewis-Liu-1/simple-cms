<?php

	require_once(SupportedSystem.'/comment_reader.php');

	class MyComment extends MySection
	{
		public function recreate()
		{
			
		}
		
		public function isCommentValid($comment)
		{
			$pos = strpos($comment,"/");
			if ($pos === false)
			{
				return false;
			}
			else { 
				if ($pos > 0 ) return false;
			}
			return true;			
		}

		public function getValidComment($comment)
		{
			$comment=substr($comment,1);
			return $comment;
		}
			
		public function fillComment($v)
		{
			$v->ip=$_SERVER['REMOTE_ADDR'];
			$v->time=date("D, d M Y H:i:s");
			$reader=new CommentReader();
			$reader->saveComment($v);
		}
	}
?>