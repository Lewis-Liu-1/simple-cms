<?php
require_once(RootDir.ControllerDir.'/file_parse.php');
require_once(RootDir.ModelDir.'/mycomment.php');
require_once(RootDir.ModelDir.'/test_parser.php');
require_once(RootDir.ModelDir.'/MyFile.php');

class file_converter 
{
	private $section_found;
	private $sections;
	private $file_parser;
	public 	$need_print_form;
	
	private $title;
	private $filePath;
	
	private $data;
	function __construct($filename="") 
	{
		$this->title=basename($filename,".txt");
		$this->filePath=$filename;
		//echo "File title: $this->title";;
		$this->file_parser=new myfile_parser();
		
		$this->section_found = false;
		$this->hyperlink_found=0;
		$this->sections = array(
			mycomment::CSTART =>new mycomment(""),			
			"A:" =>new link_parser(),
			"ASM:"=>new asm_file_parser(),
			"C:"=>new c_file_parser(),
			"C++:"=>new cplus_file_parser(),
			"C#:"=>new csharp_file_parser(),
			"Java:"=>new java_file_parser(),
			"N:"=>new myfile_parser(),
			"IMG:"=>new img_parser(),
			"CMD:"=>new cmd_parser(),
			"Test:"=>new test_parser()
			);
			
		$this->data=new myfile();
		$this->data->loadData($this->filePath);	
	}

	function __destruct() 
	{
		
	}
	
	public function getFileTitle()
	{
		return $this->title;
	}
	
	public function print_file_name($filename)
	{
	}
	
	public function print_file_content()
	{
		$lines=$this->data->getlines();
		foreach($lines as $line)
		{
  			$len=strlen($line);

  			$line1=ltrim($line);
  			$len1=strlen($line1);

  			$line=$this->find_section($line);
			$line=$this->file_parser->convert_keyword($line);
			if ($this->file_parser->print && strlen($line)>0)
	  			echo $line."<br />";
	  		
  		}
		if ($this->section_found == true) echo "</div>";
		fclose($file);
	}

   function find_section($s)
   {
   	$ret=$s;
		if ($this->file_parser->is_section_finished()==false) return $s;

		foreach ($this->sections as $key =>$class)
		{
			$pos = strpos($s, $key);
			if ($pos !== false) //pos can be 0 which is equivalent to false, but variable type is different!!!
			{
				if($pos === 0) 
				{
					$this->file_parser=$class;
					//if ($this->file_parser->is_section_finished())
					{
						if ($this->section_found) echo "</div>\n";
						$this->section_found=true;
						echo "<div class=\"".$class->get_css_name()."\">";
						$ret="";
					}
					break;
				}
			}   	
		}
		return $ret; 
		
   }
}
?>