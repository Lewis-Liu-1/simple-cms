<?php

class MyData
{
	private $lines;
	function  __construct()
	{
		$this->lines=array();		
	}
			
	public function getlines()
	{
		return $this->lines;
	}
	public function addline($l)
	{
		$this->lines[]=$l;
	}

}

class MySection
{
	private $name;
	public $myData;
	
	function __construct()
	{
		$this->myData=new MyData();
	}	
	public function addLine($l)
	{
		$this->myData->addLine($l);
	}
	
	public function getData()
	{
		return $this->myData->getLines();	
	}	
}

